<!DOCTYPE html>

@using C2_Dominio.Entidades;

@{
    Login login = (Login)Session["objLogin"];
}

<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Restaurante</title>

        <link rel="shortcut icon" href="~/Template/img/favicon.ico">

        <link id="bs-css" href="~/Template/css/bootstrap-cerulean.min.css" rel="stylesheet">

        <link href="~/Template/css/charisma-app.css" rel="stylesheet">
        <link href='~/Template/bower_components/fullcalendar/dist/fullcalendar.css' rel='stylesheet'>
        <link href='~/Template/bower_components/fullcalendar/dist/fullcalendar.print.css' rel='stylesheet' media='print'>
        <link href='~/Template/bower_components/chosen/chosen.min.css' rel='stylesheet'>
        <link href='~/Template/bower_components/colorbox/example3/colorbox.css' rel='stylesheet'>
        <link href='~/Template/bower_components/responsive-tables/responsive-tables.css' rel='stylesheet'>
        <link href='~/Template/bower_components/bootstrap-tour/build/css/bootstrap-tour.min.css' rel='stylesheet'>
        <link href='~/Template/css/jquery.noty.css' rel='stylesheet'>
        <link href='~/Template/css/noty_theme_default.css' rel='stylesheet'>
        <link href='~/Template/css/elfinder.min.css' rel='stylesheet'>
        <link href='~/Template/css/elfinder.theme.css' rel='stylesheet'>
        <link href='~/Template/css/jquery.iphone.toggle.css' rel='stylesheet'>
        <link href='~/Template/css/uploadify.css' rel='stylesheet'>
        <link href='~/Template/css/animate.min.css' rel='stylesheet'>

        <!-- jquery -->
        <script src="~/Template/bower_components/jquery/jquery.min.js"></script>
        <script src="~/Template/bower_components/jquery/jquery.js"></script>

        <!-- external javascript -->
        <script src="~/Template/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src='~/Template/bower_components/moment/min/moment.min.js'></script>
        <script src='~/Template/bower_components/fullcalendar/dist/fullcalendar.min.js'></script>
        <script src='~/Template/js/jquery.dataTables.min.js'></script>
        <script src="~/Template/bower_components/chosen/chosen.jquery.min.js"></script>
        <script src="~/Template/bower_components/colorbox/jquery.colorbox-min.js"></script>
        <script src="~/Template/js/jquery.noty.js"></script>
        <script src="~/Template/bower_components/responsive-tables/responsive-tables.js"></script>
        <script src="~/Template/bower_components/bootstrap-tour/build/js/bootstrap-tour.min.js"></script>
        <script src="~/Template/js/jquery.raty.min.js"></script>
        <script src="~/Template/js/jquery.iphone.toggle.js"></script>
        <script src="~/Template/js/jquery.autogrow-textarea.js"></script>
        <script src="~/Template/js/jquery.uploadify-3.1.min.js"></script>
        <script src="~/Template/js/jquery.history.js"></script>
        <script src="~/Template/js/charisma.js"></script>
    </head>
    <body>
        <div class="ch-container" style="background-color:lightgray">
            <div class=" row">
                <div class="box col-md-9">
                    <div class="ch-container">
                        <div style="text-align:left">
                            @if (login.tipoEmpleado.Equals("Cajero"))
                            {
                                <h2 style="color:black"><strong>Gestionar Pago</strong></h2>
                            }
                            else
                            {
                                <h2 style="color:black"><strong>Gestionar Pedido</strong></h2>
                            }
                        </div>
                    </div>
                </div>
            <div class="box col-md-3">
                <div class="row">
                    <div class="box col-md-8" style="text-align:right">
                        <div><strong>¡Bienvenido!</strong></div>
                        <div>@login.nombreEmpleado</div>
                        <div><strong>Cargo: </strong>@login.tipoEmpleado</div>
                    </div>
                    <div class="box col-md-4" style="text-align:center">
                        <div style="font-size: 50px">
                            <span><i class="glyphicon glyphicon-shopping-cart green"></i></span>
                        </div>
                        <div><button class="btn btn-danger btn-xs" onclick="location.href='@Url.Action("Principal", "Login")'">Desconectar</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    </body>
</html>
