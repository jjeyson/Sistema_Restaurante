@model IEnumerable<C2_Dominio.Entidades.Pago>

@{
    Layout = "~/Views/PaginaMaestra_MantenedorConsulta.cshtml";
}

    <div style="text-align:center">
        <h3>Nivel Ventas</h3>         
                <form method="post" action="../ReporteNivelVentas/NivelVentas">
                    <h5 style="color:black">
                        <b>Fecha de Inicio: &nbsp;</b>  <input type="date" id="datInicial" name="dateInicial" />
                        <b>&nbsp;Fecha Fin: &nbsp;</b> <input type="date" id="datFinal" name="dateFinal" />
                        <input type="submit" name="btnListarRepotHabit" class="btn btn-primary" value="Buscar" />
                    </h5>
                 </form>
        </div>
    <br />
      <h2> @ViewBag.errorfecha</h2>

        @{ if (ViewBag.entrar == 1)
            {
        <div class="table-responsive">
            <table id="racetimes" class="table table-striped table-bordered bootstrap-datatable responsive">
                <tr id="firstrow">
                    <th>Fecha</th>
                    <th>Descripcion</th>
                    <th>dni</th>
                    <th>Nombre</th>
                    <th>ruc</th>
                    <th>RazonSocial</th>
                    <th>Total</th>

                </tr>

                @{double total1 = 0; }
                @{ if (ViewBag.entrar == 1)
                    {
                        foreach (var m in Model)
                        {
                        <tr style="text-align:center">
                            <td>@Html.DisplayFor(modelItem => m.fecha)</td>
                            <td>@Html.DisplayFor(modelItem => m.tipoComprobante.descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => m.cliente.dni)</td>
                            <td>@Html.DisplayFor(modelItem => m.cliente.nombre)</td>
                            <td>@Html.DisplayFor(modelItem => m.cliente.ruc)</td>
                            <td>@Html.DisplayFor(modelItem => m.cliente.razonSocial)</td>
                            <td>@Html.DisplayFor(modelItem => m.pagoTotal)</td>
                        </tr>
                            total1 = total1 + m.pagoTotal;
                        }

                    }

                }
            </table>

        </div>
    <div class="row" style="text-align:center">
            <b>Total S/.:</b> <u style="color:blue">@total1</u>
        </div>
                        }
                    }